{
  "openapi": "3.0.1",
  "info": {
    "title": "Maintenance.WebAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/Maintenance/vehicles/{vehicleId}/repairs": {
      "get": {
        "tags": [
          "Maintenance"
        ],
        "parameters": [
          {
            "name": "vehicleId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RepairHistory"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RepairHistory"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RepairHistory"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Maintenance": {
      "post": {
        "tags": [
          "Maintenance"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RepairHistory"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RepairHistory"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RepairHistory"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Maintenance/crash": {
      "get": {
        "tags": [
          "Maintenance"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Maintenance/usage": {
      "get": {
        "tags": [
          "Maintenance"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RepairHistory": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "vehicleId": {
            "type": "integer",
            "format": "int32"
          },
          "repairDate": {
            "type": "string",
            "format": "date-time"
          },
          "descriptionOfRepair": {
            "type": "string",
            "nullable": true
          },
          "repairCost": {
            "type": "number",
            "format": "double"
          },
          "repairPerformedBy": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "ApiKey": {
        "type": "apiKey",
        "description": "API Key needed to access the endpoints. Example: MY_SECRET_KEY_123",
        "name": "X-Api-Key",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "ApiKey": [ ]
    }
  ]
}